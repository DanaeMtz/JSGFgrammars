#JSGF V1.0;
grammar no_intent;
import <common.generic.*>;
import <common.operations.*>;
import <common.products.*>;
import <dicts.AMOUNT.*>;
import <dicts.CARD.*>;
import <dicts.CARDINAL.*>;
import <dicts.CHANGE_TYPE.*>;
import <dicts.CURRENCY.*>;
import <dicts.FINANCING.*>;
import <dicts.PACKAGE.*>;
import <dicts.REF_THING.*>;
import <globals.cancel_transaction.*>;
import <globals.end_call.*>;
import <globals.escalate_agent.*>;
import <globals.explain.*>;
import <globals.main_menu.*>;
import <globals.no.*>;
import <globals.options.*>;
import <globals.repeat.*>;
import <globals.unavailable_info.*>;
import <globals.wait.*>;
import <globals.wake.*>;
import <globals.yes.*>;

public <no_intent> = <global_commands> | [<give_me>] <fragments> | <correction> | <cardinal>;

<fragments> =
    (
        <on_my_investment> |
        <amount> |
        <credit_product> |
        <change_type> |
        <package_value>
    ) [please];


<global_commands> = (
    <cancel_transaction> |
    <end_call> |
    <escalate_agent> |
    <explain> |
    <main_menu> |
    <no_global> |
    <repeat> |
    <options> |
    <unavailable_info>|
    <wait> |
    <wake> |
    <yes_global>
);

<correction> =
    (
        /4/ no |
        /3/ no I <asked_for> |
        /1/ not (that | this | what I <asked_for>) I <asked_for> |
        /1/ (that's | it's | this is) not (it | what I <asked_for>) I <asked_for>
    )
    (<fragments> | <global_commands>)
;


<credit_product> = [<in_preps>] [<my>] (<card> | <financing>);


<package_value> =
    [the] <package> [package] |
    [the one called] <package>
;


<on_my_investment> = (
    [<in_preps>] [<my>] (
        <INVESTMENT_account> |
        <TRANSACTIONAL_account> |
        <currency> <account_kw> |
        <account_kw> in <currency>
    ) |
    [<in_preps>] <account_ref>
);


<in_preps> = (in | on | into | towards | for | of | from);
<give_me> = /3/ <i_want> | /1/ (give|get) me;


//entities with tags
<amount> = <AMOUNT>{AMOUNT};
<cardinal> = <CARDINAL>{CARDINAL};
<card> = <CARD>{CARD};
<change_type> = <CHANGE_TYPE>{CHANGE_TYPE};
<currency> = <CURRENCY>{CURRENCY};
<financing> = <FINANCING>{FINANCING};
<package> = <PACKAGE>{PACKAGE};

